#!/bin/bash
cd ~/mottram && git add . && git commit -a -m "Added a new post" && git push && rm -rf ~/mottram/_site/* && jekyll && rsync -avz --delete --exclude='*.textdrive' _site/ mottram@howe.textdrive.com:domains/mottr.am/web/public && growlnotify --appIcon TextMate Weblog Update Complete -m "jekyll, git and rsync have done their stuff" && open -a safari "http://pingomatic.com/ping/?title=Mottr.am&blogurl=http%3A%2F%2Fmottr.am&rssurl=http%3A%2F%2Fmottr.am%2Fatom.xml&chk_weblogscom=on&chk_blogs=on&chk_technorati=on&chk_feedburner=on&chk_syndic8=on&chk_newsgator=on&chk_myyahoo=on&chk_pubsubcom=on&chk_blogdigger=on&chk_blogrolling=on&chk_blogstreet=on&chk_moreover=on&chk_weblogalot=on&chk_icerocket=on&chk_newsisfree=on&chk_topicexchange=on&chk_google=on&chk_tailrank=on&chk_bloglines=on&chk_postrank=on&chk_skygrid=on&chk_collecta=on" && open -a safari "http://mottr.am"