## Settings
# Set default values for screen padding
kwmc config padding 40 20 20 20
# Set default values for container gaps
kwmc config gap 15 15
# Let Kwm listen for hotkeys
kwmc config hotkeys on
# Disable focus-follows-mouse
kwmc config focus-follows-mouse off
# Enable mouse-follows-focus
kwmc config mouse-follows-focus on
# Let next/previous focus wrap around
kwmc config cycle-focus all
# Don't float windows when dragged
kwmc config dragndrop off
# Enable tiling
kwmc config tiling on
# New splits should become the left leaf-node
kwmc config spawn left
# Default tiling mode for new spaces
kwmc config space bsp
# Set default split ratio
kwmc config split-ratio 0.5
# Automatically float windows that fail to resize
kwmc config float-non-resizable on
# Automatically resize the window to its container
kwmc config lock-to-container on
# Ignore applications
kwmc rule owner="System Preferences" properties={float="true"}
kwmc rule owner="mpv" properties={float="true"}
kwmc rule owner="QuickTime Player" properties={float="true"}
kwmc rule owner="VLC" properties={float="true"}
# Tile windows that don't want to be tiled
kwmc rule owner="iTerm2" properties={role="AXDialog"}
kwmc rule owner="Catch" properties={role="AXDialog"}
kwmc rule owner="Bartender 2" properties={role="AXDialog"}
kwmc rule owner="Transmission" properties={role="AXFloatingWindow"}
# # Enable border for focused window
# kwmc config focused-border on
# kwmc config focused-border size 1
# kwmc config focused-border color FF555555
# kwmc config focused-border radius 4
# Borders for marked windows
kwmc config marked-border on
kwmc config marked-border size 4
kwmc config marked-border color FF555555
kwmc config marked-border radius 4
# Keybindings
# Rotate the window tree by 180 degrees
kwmc bindsym alt+shift+ctrl+cmd-e tree rotate 90
kwmc bindsym alt+shift+ctrl+cmd-r tree rotate 180
kwmc bindsym alt+shift+ctrl+cmd-t tree rotate 270
# Mark a window
kwmc bindsym alt+shift+ctrl+cmd-x window -mk focused
# Toggle _w_indow float
kwmc bindsym alt+shift+ctrl+cmd-w window -t focused
# Expand window to fill _u_p parent space
kwmc bindsym alt+shift+ctrl+cmd-u window -z parent
# Focus next/previous/first/last window
kwmc bindsym alt+shift+ctrl+cmd-h window -f west
kwmc bindsym alt+shift+ctrl+cmd-l window -f east
kwmc bindsym alt+shift+ctrl+cmd-j window -f south
kwmc bindsym alt+shift+ctrl+cmd-k window -f north
kwmc bindsym alt+shift+ctrl+cmd-; window -f first
kwmc bindsym alt+shift+ctrl+cmd-' window -f last
# Swap current window with next/previous/marked window
kwmc bindsym alt+shift+ctrl+cmd-p window -s prev
kwmc bindsym alt+shift+ctrl+cmd-n window -s next
kwmc bindsym alt+shift+ctrl+cmd-a window -s west
kwmc bindsym alt+shift+ctrl+cmd-s window -s south
kwmc bindsym alt+shift+ctrl+cmd-d window -s north
kwmc bindsym alt+shift+ctrl+cmd-f window -s east
kwmc bindsym alt+shift+ctrl+cmd-m window -s mark
# Move marked window to focussed container
kwmc bindsym alt+shift+ctrl+cmd-y window -x
# Detach focused window and reinsert in direction
kwmc bindsym ctrl+shift-k window -x north
kwmc bindsym ctrl+shift-l window -x east
kwmc bindsym ctrl+shift-j window -x south
kwmc bindsym ctrl+shift-h window -x west
# Detach marked window and reinsert at focused window
kwmc bindsym ctrl+shift-x window -x mark
# Move windows to spaces
kwmc config spaces-key ctrl
kwmc bindsym ctrl+cmd-1 window -m space 1
kwmc bindsym ctrl+cmd-2 window -m space 2
kwmc bindsym ctrl+cmd-3 window -m space 3
kwmc bindsym ctrl+cmd-4 window -m space 4
kwmc bindsym ctrl+cmd-right window -m space right
kwmc bindsym ctrl+cmd-left window -m space left
# Jump to a space without animated transition 
kwmc bindsym ctrl+shift-1 space -fExperimental 1
kwmc bindsym ctrl+shift-2 space -fExperimental 2
kwmc bindsym ctrl+shift-3 space -fExperimental 3
kwmc bindsym ctrl+shift-4 space -fExperimental 4
# Reduce/expand window
kwmc bindsym shift+alt-h window -c reduce 0.1
kwmc bindsym shift+alt-l window -c expand 0.1
# Switch between tiling, monocle and floating
kwmc bindsym alt+shift-1 space -t bsp
kwmc bindsym alt+shift-2 space -t monocle
kwmc bindsym alt+shift-3 space -t float
# Restore default layout
kwmc bindsym alt+shift-4 tree restore default
# Refresh layout
kwmc bindsym alt+shift-5 tree -c refresh
# Make the focussed window fullscreen
kwmc bindsym alt+shift+ctrl+cmd-1 window -z fullscreen
# Quit kwm
# kwmc bindsym alt+shift+ctrl+cmd-0 quit

