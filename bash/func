# Functions for bash and zsh-----------------------------------------------

# Quick git commit
function gg {
  git commit -v -a -m "$*"
}

# View source files with pygments syntax colouring
function pless {
  pygmentize $1 | less -r
}

# mkdir, cd into it
function mkcd {
  mkdir $1
  cd $1
}

# list and grep
function lgr {
  ls -a | grep $1 
}

# quick google from the command line
function googler {
  w3m google.com/search?q=$1 
}

# new tmux sesh
function tmn {
  tmux new -s $1 
}

# Attach a tmux Session
function tma {
  tmux att -t $1	
} 

# Poor man's Notational Velocity!
function note {
  vim ~/notes/$1.txt	
}

function nls {
  ls -c ~/notes | grep $1
	} 
