### Functions

# Quick git commit
function gg {
  git commit -v -a -m "$*"
}

# View source files with pygments syntax colouring
function pless {
  pygmentize $1 | less -r
}

# mkdir, cd into it
function mkcd {
  mkdir $1
  cd $1
}

# list and grep
function lgr {
  ls -a | grep $1 
}

#pwsafe show username and password
function pp {
  pwsafe -xpE $1
}

# quick google from the command line
function googler {
  w3m google.com/search?q=$1 
}
